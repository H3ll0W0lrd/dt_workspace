<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
	<ProgressBar android:id="@+id/battary_bar"
		android:layout_width="match_parent"
		android:layout_height="10dp"
		style="?android:attr/progressBarStyleHorizontal"
		android:progressDrawable="@drawable/progressbar_1"
		android:max="100"
		android:progress="20"
		android:orientation="horizontal" />
 
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <Button
	        android:id="@+id/welcome_btn1"
	        android:text="1"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
	   	
	   	<Button
	        android:id="@+id/welcome_btn2"
	        android:text="2"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
	   	   	
	   	<Button
	        android:id="@+id/welcome_btn3"
	        android:text="3"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <Button
	        android:id="@+id/welcome_btn4"
	        android:text="4"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
	   	
	   	<Button
	        android:id="@+id/welcome_btn5"
	        android:text="5"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
	   	   	
	   	<Button
	        android:id="@+id/welcome_btn6"
	        android:text="6"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <Button
	        android:id="@+id/welcome_btn7"
	        android:text="7"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
	   	
	   	<Button
	        android:id="@+id/welcome_btn8"
	        android:text="8"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
	   	   	
	   	<Button
	        android:id="@+id/welcome_btn9"
	        android:text="9"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <Button
	        android:id="@+id/welcome_btn0"
	        android:text="0"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
	    	android:layout_weight="2"
	    	android:layout_margin="2dp"/>
	   	
	   	<Button
	        android:id="@+id/welcome_btnrefresh"
	        android:text="重新输入"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#70AD47"
	    	android:textColor="#FFFFFF"
	    	android:textSize="26sp"
	    	android:layout_weight="1"
	    	android:layout_margin="2dp"/>

    </LinearLayout>
</LinearLayout>
