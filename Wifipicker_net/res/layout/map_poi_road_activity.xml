<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.rtmap.wifipicker.widget.MapWidget
        android:id="@+id/map_view_map_correct"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txt_map_name_map_correct"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#333333"
        android:gravity="center"
        android:text="@string/message_not_select_map"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_expore_map_correct"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="#222222"
        android:gravity="center"
        android:text="导出"
         android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_del_map_correct"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dip"
        android:background="@drawable/button_del_press"
        android:enabled="true"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_mark_map_correct"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dip"
        android:layout_toRightOf="@id/btn_del_map_correct"
        android:background="@drawable/button_mark_press"
        android:enabled="true"
        android:gravity="center" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        layout="@layout/layout_direction" />

    <Button
        android:id="@+id/door"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_del_map_correct"
        android:layout_alignLeft="@+id/btn_del_map_correct"
        android:text="门" />

</RelativeLayout>