<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.rtm.frm.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_map_name_poi" />

    <TextView
        android:id="@+id/txt_map_name_poi"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#333333"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/message_not_select_map"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_back_poi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#222222"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/title_back_2_maps_select"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_expore_poi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="#222222"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="导出"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_del_poi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dip"
        android:background="@drawable/button_del_press"
        android:enabled="true"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_mark_poi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/btn_del_poi"
        android:background="@drawable/button_mark_press"
        android:enabled="true"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_direction_right"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="   R   " />

    <Button
        android:id="@+id/btn_direction_down"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btn_direction_right"
        android:gravity="center"
        android:text="   D   " />

    <Button
        android:id="@+id/btn_direction_left"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btn_direction_down"
        android:gravity="center"
        android:text="   L   " />

    <Button
        android:id="@+id/btn_direction_up"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_above="@id/btn_direction_down"
        android:layout_toLeftOf="@id/btn_direction_right"
        android:gravity="center"
        android:text="   U   " />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/map_view" >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/pin48" />
    </RelativeLayout>

</RelativeLayout>