<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/main_top_margin_left"
    android:layout_marginRight="@dimen/main_top_margin_left"
    android:orientation="vertical"
    android:background="@color/white">

    <EditText
        android:id="@+id/edt_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="host:123.56.138.28" />

    <EditText
        android:id="@+id/edt_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="port:21"
        android:text="21" />

    <EditText
        android:id="@+id/edt_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="username:airport" />

    <EditText
        android:id="@+id/edt_pass_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password:1234567" />

    <Button
        android:id="@+id/btn_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定" />
</LinearLayout>