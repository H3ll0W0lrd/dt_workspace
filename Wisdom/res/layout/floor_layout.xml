<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.rtmap.wisdom.util.wheelview.DTHorizontalWheelView
        android:id="@+id/floor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:lwvCenterMarkTextSize="24sp"
        app:lwvCursorSize="20dp"
        app:lwvHighlightColor="@android:color/black"
        app:lwvMarkColor="@android:color/darker_gray"
        app:lwvMarkTextColor="#CACACA"
        app:lwvMarkTextSize="20sp" />

    <Button
        android:id="@+id/floor_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="确定" />

</LinearLayout>