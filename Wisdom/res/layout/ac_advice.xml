<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        style="@style/title_bar_style" >

        <TextView
            style="@style/title_font_style"
            android:text="意见反馈" />

        <ImageView
            android:id="@+id/back"
            style="@style/title_back_style" />

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="发送"
            android:textColor="@color/list_grid_item_text"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#d1d1d1" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="是否喜欢Wisdom Map ?"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            style="@style/advice_radio_style"
            android:checked="true"
            android:gravity="left|center_vertical"
            android:text="喜欢" />

        <RadioButton
            android:id="@+id/radio1"
            style="@style/advice_radio_style"
            android:gravity="center"
            android:text="还行" />

        <RadioButton
            android:id="@+id/radio2"
            style="@style/advice_radio_style"
            android:gravity="right|center_vertical"
            android:text="不喜欢" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@color/list_grid_item_text"
        android:hint="请告诉我们您遇到的问题和您的意见"
        android:gravity="left|top"
        android:background="@drawable/et_round_border"
         >
    </EditText>
    
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@color/list_grid_item_text"
        android:hint="请留下您的联系方式（邮箱/手机号等）"
        android:singleLine="true"
        android:background="@drawable/et_round_border"
         >
    </EditText>

</LinearLayout>