<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        style="@style/title_bar_style" >

        <TextView
            style="@style/title_font_style"
            android:text="我的" />

        <ImageView
            android:id="@+id/back"
            style="@style/title_back_style" />

        <TextView
            android:id="@+id/me_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="编辑"
            android:textColor="@color/list_grid_item_text"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#d1d1d1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_bar"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/me_avatar_bg"
            android:scaleType="center"
            android:src="@drawable/me_avatar" />

        <Button
            android:id="@+id/me_build_like"
            style="@style/me_text_style"
            android:text="商场标签" />

        <Button
            android:id="@+id/me_msg"
            style="@style/me_text_style"
            android:text="消息"
            android:visibility="gone" />

        <Button
            android:id="@+id/me_navigate_icon"
            style="@style/me_text_style"
            android:text="导航犬" />

        <Button
            android:id="@+id/me_advice"
            style="@style/me_text_style"
            android:text="意见反馈" />

        <Button
            android:id="@+id/me_store"
            style="@style/me_text_style"
            android:text="给个好评" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            style="@style/me_text_style"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="bottom|center_horizontal"
            android:text="Version 1.0"
            android:textColor="#9b9ba8" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@drawable/me_icon1" />
    </LinearLayout>

</RelativeLayout>