<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sliding_menu_item_padding" >

    <TextView
        android:id="@+id/floor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sliding_menu_text_size" 
        android:text="你好你好你好你好你好"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/description"
        android:ellipsize="end"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sliding_menu_item_padding"
        android:textSize="@dimen/sliding_menu_text_size_little" 
        android:text="北京"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>