<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/line_left_text"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/tab_btn_lay_padding_bottom"
        android:paddingTop="@dimen/tab_btn_lay_padding_top" >

        <RelativeLayout
            android:id="@+id/tab_btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/tab_btn_left_img"
                android:layout_width="@dimen/tab_btn_img_width"
                android:layout_height="@dimen/tab_btn_img_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/tab_btn_img_margin_top"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tab_btn_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_btn_left_img"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tab_btn_left_hint"
                android:layout_width="@dimen/tab_btn_hint_width"
                android:layout_height="@dimen/tab_btn_hint_height"
                android:layout_marginLeft="@dimen/tab_btn_hint_margin_left"
                android:layout_marginTop="@dimen/tab_btn_hint_margin_top"
                android:layout_toRightOf="@id/tab_btn_left_img"
                android:background="@drawable/tab_msg"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tab_btn_hint_size"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_btn_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/tab_btn_center_img"
                android:layout_width="@dimen/tab_btn_img_width"
                android:layout_height="@dimen/tab_btn_img_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/tab_btn_img_margin_top"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tab_btn_center_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_btn_center_img"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tab_btn_center_hint"
                android:layout_width="@dimen/tab_btn_hint_width"
                android:layout_height="@dimen/tab_btn_hint_width"
                android:layout_marginLeft="@dimen/tab_btn_hint_margin_left"
                android:layout_marginTop="@dimen/tab_btn_hint_margin_top"
                android:layout_toRightOf="@id/tab_btn_center_img"
                android:background="@drawable/tab_msg"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tab_btn_hint_size"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/tab_btn_right_img"
                android:layout_width="@dimen/tab_btn_img_width"
                android:layout_height="@dimen/tab_btn_img_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/tab_btn_img_margin_top"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tab_btn_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_btn_right_img"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tab_btn_right_hint"
                android:layout_width="@dimen/tab_btn_hint_width"
                android:layout_height="@dimen/tab_btn_hint_width"
                android:layout_marginLeft="@dimen/tab_btn_hint_margin_left"
                android:layout_marginTop="@dimen/tab_btn_hint_margin_top"
                android:layout_toRightOf="@id/tab_btn_right_img"
                android:background="@drawable/tab_msg"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/tab_btn_hint_size"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="test" />

</LinearLayout>