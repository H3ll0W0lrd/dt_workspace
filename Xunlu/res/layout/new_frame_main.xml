<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_new_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_bottom"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:id="@+id/base_line"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom" >

            <LinearLayout
                android:id="@+id/lin_tab0"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_tab0"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_map" />

                <TextView
                    android:id="@+id/tv_tab0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地图" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tab1"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_tab1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_activities" />

                <TextView
                    android:id="@+id/tv_tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tab2"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image_tab2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_mine" />

                <TextView
                    android:id="@+id/tv_tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>