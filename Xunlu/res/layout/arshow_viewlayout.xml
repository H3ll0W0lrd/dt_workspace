<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:background="@drawable/ar_poibg" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arpoi_headbg"
            />
        <ImageView
            android:id="@+id/arshowlayout_headimage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/arshowlayout_headimage"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/arshowlayout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="10dp"
                android:text="hello"
                android:textColor="@color/arshow_poitext" />

            <TextView
                android:id="@+id/arshowlayout_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="9dp"
                android:text="hello"
                android:textColor="@color/arshow_poitext" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>