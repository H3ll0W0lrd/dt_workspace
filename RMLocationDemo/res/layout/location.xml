<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_start_locate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/startLocate" />

        <TextView
            android:id="@+id/tv_sdk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/locateSdkVersion" />

        <TextView
            android:id="@+id/tv_indoor_locate_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             />

        <Button
            android:id="@+id/poi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场景POI" />

        <TextView
            android:id="@+id/poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示POI" />

        <Button
            android:id="@+id/build_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="得到大楼名字" />

        <TextView
            android:id="@+id/build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buildName" />

        <TextView
            android:id="@+id/log_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/finger_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择服务器" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/server_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="正式服" />

            <RadioButton
                android:id="@+id/server_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试服" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位模式" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/location_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="离线" />

            <RadioButton
                android:id="@+id/location_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线" />
            <RadioButton
                android:id="@+id/location_mix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="混合" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="定位间隔时间（秒）：" />

            <EditText
                android:id="@+id/loc_span"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:inputType="number" >
            </EditText>

            <Button
                android:id="@+id/span_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>